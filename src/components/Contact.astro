---
import "../styles/global.css";
---

<section
  id="contact"
  class="py-16 px-4 bg-gray-100 lg:mt-32"
  style="background-color: rgb(246, 245, 241);"
>
  <h3 class="text-3xl mb-6">Contact Us</h3>
  <div
    class="max-w-6xl mx-auto grid grid-cols-1 lg:grid-cols-5 gap-8 items-center justify-center"
  >
    <!-- Left Column: Title + Image (40%) -->

    <!-- Right Column: Form (60%) -->
    <form
      name="contact"
      method="POST"
      data-netlify="true"
      class="lg:col-span-3 bg-white p-6 rounded-lg shadow-md"
    >
      <input type="hidden" name="form-name" value="contact" />

      <div class="mb-4">
        <label for="name" class="block text-gray-700 font-medium mb-2"
          >Your Name</label
        >
        <input
          type="text"
          name="name"
          id="name"
          required
          class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </div>

      <div class="mb-4">
        <label for="email" class="block text-gray-700 font-medium mb-2"
          >Your Email</label
        >
        <input
          type="email"
          name="email"
          id="email"
          required
          class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </div>

      <div class="mb-4">
        <label for="message" class="block text-gray-700 font-medium mb-2"
          >Message</label
        >
        <textarea
          name="message"
          id="message"
          rows="5"
          required
          class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
        ></textarea>
      </div>

      <button
        type="submit"
        class="contact-cta text-white px-6 py-2 rounded hover:bg-blue-700 transition"
      >
        Send Message
      </button>
    </form>
  </div>
</section>

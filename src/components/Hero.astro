---
import "../styles/global.css";
---

<section class="relative w-full h-screen overflow-hidden">
  <!-- Video Background -->
  <video
    autoplay
    muted
    loop
    playsinline
    class="absolute inset-0 w-full h-full object-cover z-0 top-10"
  >
    <source
      src="/videos/7580172-uhd_3840_2160_25fps.mp4.mp4"
      type="video/mp4"
    />
  </video>

  <!-- Overlay -->
  <div class="overlay absolute inset-0"></div>

  <!-- Text Content -->
  <div
    class="absolute inset-0 z-20 flex flex-col items-center justify-center text-center px-6"
  >
    <h1 class="text-white text-6xl md:text-6xl mb-4 lato-black headertext">
      <!-- Restore Your Body. Reconnect With Your Soul. --> Welcome to The Marbella
      <span class="text-[#eb5943] font-black">Wellness</span> Retreat .
    </h1>
    <p class="text-[#fff] text-lg md:text-xl mb-6 max-w-2xl">
      <!-- Luxury wellness retreats, personal training, and holistic beauty care in a
      serene coastal setting. -->
      A sanctuary for skin, body, and soul.
    </p>
    <a
      href="/massage"
      class="backgroundcta text-white
     text-gray-800 px-6 py-3 rounded hover:bg-gray-200 transition"
    >
      Explore Services
    </a>
  </div>
</section>

<style>
  .overlay {
  }
  .headertext {
    font-family: "Quicksand", sans-serif;
    text-transform: capitalize;
    font-size: 2rem;
  }
</style>
